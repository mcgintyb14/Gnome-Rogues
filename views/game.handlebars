<main class="game-interface">
    <div class="enemies-container">
        <img src="{{enemy.dataValues.Image}}" alt="Enemy Image">
        <h2>{{enemy.dataValues.name}}</h2>
        <p>{{enemy.dataValues.name}}'s' HP: {{enemy.dataValues.hp}}</p>
    </div>

    <div class="character-container">
        {{!-- <img src="{{character.Image}}" alt="Character Image"
            class="character-image"> --}}
        <h2>{{character.name}}</h2>
        <p>{{character.name}}'s HP: {{character.current_hp}}</p>
    </div>

    <p> Writing random stuff to test</p>

  <div class="card-container">
        {{#each cards as |card|}}
        <div class="card">
            <h3>{{card.name}}</h3>
            <p>Damage: {{card.damage}}</p>
            <p>Dodge: {{card.dodge}}</p>
        </div>
        {{/each}}
    </div>
</main>
